{
  "name": "legal-entity-extractor-web",
  "version": "1.0.0",
  "description": "Extract legal entities from documents and visualize relationships as Mermaid diagrams",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node --watch server/index.js",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "echo 'Server is already in JavaScript'",
    "start": "node server/index.js",
    "test": "vitest run",
    "lint": "eslint server client/src --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "mammoth": "^1.6.0",
    "mermaid": "^10.6.1",
    "axios": "^1.6.2",
    "octokit": "^3.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": "24.x",
    "npm": "10.x"
  }
}
